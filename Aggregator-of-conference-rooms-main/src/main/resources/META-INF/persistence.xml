<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">

    <class>model.Product</class>
    <class>model.DJ</class>
    <class>model.Hall</class>
    <class>model.CandyBar</class>
    <class>model.Sweet</class>
    <class>model.BusinessOwner</class>
    <class>model.Organiser</class>
    <class>model.User</class>
    <class>model.Message</class>
    <class>model.Offer</class>


    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="create"/>
      <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost\SQLEXPRESS;database=AggregatorOfConferenceRooms;encrypt=true;trustServerCertificate=true;"/>
      <property name="javax.persistence.jdbc.user" value="Guest"/>
      <property name="javax.persistence.jdbc.password" value="1234"/>

    </properties>

  </persistence-unit>
</persistence>

